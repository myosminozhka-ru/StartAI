# OSMI AI Environment Variables Example
# Copy this file to .env and configure your values

# Basic Configuration
PORT=3000
WORKER_PORT=5566

# Database Configuration
DATABASE_PATH=/root/.osmi-ai
DATABASE_TYPE=sqlite
# DATABASE_HOST=localhost
# DATABASE_PORT=5432
# DATABASE_NAME=osmi_ai
# DATABASE_USER=osmi_ai
# DATABASE_PASSWORD=your_password
# DATABASE_SSL=false

# Secret Keys
SECRETKEY_STORAGE_TYPE=local
SECRETKEY_PATH=/root/.osmi-ai
# OSMI_AI_SECRETKEY_OVERWRITE=

# Logging
DEBUG=false
LOG_PATH=/root/.osmi-ai/logs
LOG_LEVEL=info

# Storage
STORAGE_TYPE=local
BLOB_STORAGE_PATH=/root/.osmi-ai/storage

# Settings
# NUMBER_OF_PROXIES=0
# CORS_ORIGINS=*
# IFRAME_ORIGINS=*
# OSMI_AI_FILE_SIZE_LIMIT=100mb
SHOW_COMMUNITY_NODES=true
DISABLE_OSMI_AI_TELEMETRY=false

# Authentication
# APP_URL=http://localhost:3000
# JWT_AUTH_TOKEN_SECRET=your_jwt_secret
# JWT_REFRESH_TOKEN_SECRET=your_refresh_secret
# JWT_ISSUER=osmi-ai
# JWT_AUDIENCE=osmi-ai-users
# JWT_TOKEN_EXPIRY_IN_MINUTES=60
# JWT_REFRESH_TOKEN_EXPIRY_IN_MINUTES=10080
# EXPIRE_AUTH_TOKENS_ON_RESTART=false
# EXPRESS_SESSION_SECRET=your_session_secret
# SECURE_COOKIES=false

# Email Configuration
# SMTP_HOST=
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASSWORD=
# SMTP_SECURE=false
# SENDER_EMAIL=

# Enterprise Features
# LICENSE_URL=
# OSMI_AI_EE_LICENSE_KEY=
# OFFLINE=false

# Metrics Collection
ENABLE_METRICS=true
METRICS_PROVIDER=prometheus
METRICS_INCLUDE_NODE_METRICS=true
METRICS_SERVICE_NAME=OSMI_AI

# Queue Configuration (for multi-instance setup)
MODE=queue
QUEUE_NAME=osmi-ai-queue
REDIS_URL=redis://redis:6379
# REDIS_HOST=redis
# REDIS_PORT=6379
# WORKER_CONCURRENCY=1

# Security
# TRUST_PROXY=false
